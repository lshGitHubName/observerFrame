<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/home_list3"
                    android:scaleType="fitXY"
                    android:id="@+id/mine_message_iv"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/mine_photo_iv"
                    android:src="@drawable/mine_photo"
                    android:scaleType="fitXY"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textColor="@color/color_white"
                    android:paddingTop="80dp"
                    android:layout_centerInParent="true"
                    android:text="未登陆"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/mine_collection_iv"
                    android:src="@drawable/mine_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="我的收藏"
                    android:layout_toRightOf="@id/mine_collection_iv"
                    android:id="@+id/mine_collection_tv"
                    android:textColor="#60D5D6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/mine_divider"
                    android:layout_centerHorizontal="true"
                    android:background="#D4D4D4"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"></LinearLayout>
                <ImageView
                    android:layout_toRightOf="@id/mine_divider"
                    android:id="@+id/mine_publish_iv"
                    android:src="@drawable/mine_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_toRightOf="@id/mine_publish_iv"
                    android:text="我的发布"
                    android:textColor="#60D5D6"
                    android:id="@+id/mine_publish_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <!--    分割线  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_middle_divider"
                >
            </LinearLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@id/mine_message_iv"
                    android:src="@drawable/mine_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/mine_message_iv"
                    android:gravity="center"
                    android:text="我的消息"
                    android:id="@+id/mine_message_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mine_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@id/mine_message_iv"
                    android:src="@drawable/mine_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/mine_message_iv"
                    android:gravity="center"
                    android:text="我的消息"
                    android:id="@+id/mine_message_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mine_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@id/mine_message_iv"
                    android:src="@drawable/mine_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/mine_message_iv"
                    android:gravity="center"
                    android:text="我的消息"
                    android:id="@+id/mine_message_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mine_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@id/mine_message_iv"
                    android:src="@drawable/mine_message"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/mine_message_iv"
                    android:gravity="center"
                    android:text="我的消息"
                    android:id="@+id/mine_message_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mine_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>