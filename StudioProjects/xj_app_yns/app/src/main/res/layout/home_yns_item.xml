<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="16sp"
        android:id="@+id/yns_province_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="武汉市"
        android:textColor="@color/color_black" />

    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/yns_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yns_province_tv"
        android:orientation="horizontal"
        >
        <ImageView
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/home_list5" />

        <ImageView
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/home_list5" />

        <ImageView
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:src="@drawable/home_list5" />
    </LinearLayout>

    <TextView
        android:id="@+id/check_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/yns_ll"
        android:layout_marginRight="5dp"
        android:drawableRight="@drawable/home_arrow"
        android:text="查看更多"
        android:textColor="@color/color_black" />
</RelativeLayout>